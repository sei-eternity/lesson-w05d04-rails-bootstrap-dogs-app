<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<div class="d-flex justify-content-center">
  <div class="spinner-border" role="status" id="spin">
    <span class="sr-only">Loading...</span>
  </div>
</div>

<table class="table table-striped" id="dogs-table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.owner %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path %>
